// Configuration for projects that run in Node.js/server environments.
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "noEmit": true
  },
  "include": [
    "crates/intl_message_database/",
    "packages/babel-plugin-transform-discord-intl/",
    "packages/eslint-plugin-discord-intl/",
    "packages/intl-loader-core/",
    "packages/jest-processor-discord-intl/",
    "packages/metro-intl-transformer/",
    "packages/rspack-intl-loader/",
    "packages/swc-intl-message-transformer/",
  ],
}
